<UserControl x:Class="PenkiControlApp.UI.Windows.TagCheckbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PenkiControlApp.UI.Windows"
             mc:Ignorable="d"
             d:DesignHeight="50" d:DesignWidth="150">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2" RadiusX="10" RadiusY="10" Fill="White"></Rectangle>
        <CheckBox x:Name="Selected" Grid.Column="0" VerticalAlignment="Center"/>
        <Label x:Name="TagName" Grid.Column="1" Content="TagName" VerticalContentAlignment="Center" FontSize="20"></Label>
    </Grid>
</UserControl>
