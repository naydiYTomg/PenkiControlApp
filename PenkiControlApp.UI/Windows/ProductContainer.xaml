<UserControl x:Class="PenkiControlApp.UI.Windows.ProductContainer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenkiControlApp.UI.Windows"
        mc:Ignorable="d"
        d:DesignHeight="70" d:DesignWidth="400">
    <Grid>
        
        <Button  BorderBrush="Black" BorderThickness="5" VerticalAlignment="Center" Width="600" Height="100" HorizontalAlignment="Center" FontSize="20" Background="#00000000" Click="ButtonBase_OnClick">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
                
            </Button.Resources>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="NameLabel" Grid.Column="0" Content="Name" FontSize="24"/>
                <Label x:Name="CategoryLabel"  Grid.Column="1" Content=":Category" FontSize="24"></Label>
            </Grid>
        </Button>


    </Grid>
</UserControl>
