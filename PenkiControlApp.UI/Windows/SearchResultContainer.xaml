<UserControl x:Class="PenkiControlApp.UI.Windows.SearchResultContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PenkiControlApp.UI.Windows"
             mc:Ignorable="d"
             d:DesignHeight="70" d:DesignWidth="1000">
    <Grid>
        <Button Width="1000"  BorderBrush="Black" BorderThickness="5" FontSize="20" Background="#00000000">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
                
            </Button.Resources>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="TypeLabel" Grid.Column="0" Content="Type" Margin="-400 0 00 0" FontSize="24"/>
                <Label x:Name="NameLabel"  Grid.Column="1" Content="Name" FontSize="24"></Label>
            </Grid>
        </Button>
    </Grid>
</UserControl>
