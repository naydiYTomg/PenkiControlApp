<UserControl x:Class="PenkiControlApp.UI.Windows.ProductAddingElement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenkiControlApp.UI.Windows"
        mc:Ignorable="d"
        Height="50" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" x:Name="_ProductNameToAdd" Text="Название" FontSize="28"/>
        <TextBlock TextWrapping="Wrap" x:Name="_ProductToAddQuantity" Text="1" FontSize="28" Grid.Column="1"/>
        <Button x:Name="_ProductToAddMinus" Content="-" FontSize="28" Grid.Column="2" Click="ProductToAddMinus_OnClick"/>
        <Button x:Name="_ProductToAddPlus" Content="+" FontSize="28" Grid.Column="3" Click="ProductToAddPlus_OnClick"/>
    </Grid>
</UserControl>
