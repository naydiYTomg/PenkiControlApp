<UserControl x:Class="PenkiControlApp.UI.Windows.AboutCategoryWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PenkiControlApp.UI.Windows"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid Background="Black" Width="800" Height="500">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" x:Name="CloseButton" Grid.Row="0" Content="X" Click="CloseButton_OnClick">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"></Setter>
                </Style>
            </Button.Resources>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF00AAAA" Offset="0.0"/>
                    <GradientStop Color="Aqua" Offset="0.3"/>
                    <GradientStop Color="ForestGreen" Offset="1.1"/>
                    
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBlock x:Name="TBTags" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Foreground="White" FontSize="25" Text="ASDASDASD"></TextBlock>
        
        
    </Grid>
</UserControl>
