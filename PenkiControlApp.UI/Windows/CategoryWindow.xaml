<UserControl x:Class="PenkiControlApp.UI.Windows.CategoryWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PenkiControlApp.UI.Windows"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400" Initialized="CategoryWindow_OnInitialized">
    <Border Background="White" CornerRadius="30" BorderBrush="Black" BorderThickness="5" Margin="25 0 25 0">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

            <TextBlock TextWrapping="Wrap" x:Name="NameOfCategory" Text="PlaceholderCategory" HorizontalAlignment="Center" Margin="10 10 10 10" Grid.Row="0" Grid.RowSpan="2" FontSize="25"/>
            <WrapPanel Grid.Row="2" x:Name="Tags" Width="300" Margin="10 10 10 10">
            </WrapPanel>
        <Button Content="Подробнее" x:Name="About" Grid.Row="3" Background="Bisque" Foreground="Black" FontSize="15" BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="0 0 25 25"/>
                    
                </Style>
            </Button.Resources>
        </Button>
        
    </Grid>
    </Border>
   
</UserControl>
