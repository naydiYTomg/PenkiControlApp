<UserControl x:Class="PenkiControlApp.UI.Windows.Container"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenkiControlApp.UI.Windows"
        mc:Ignorable="d"
        d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        
        <Button x:Name="_Information" Content="Информация" BorderBrush="Black" BorderThickness="5" VerticalAlignment="Center" Width="600" Height="100" HorizontalAlignment="Center" FontSize="20" Background="#00000000">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
                
            </Button.Resources>
            
        </Button>


    </Grid>
</UserControl>
